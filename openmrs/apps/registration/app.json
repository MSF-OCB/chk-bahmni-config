{
   "id": "bahmni.registration",
   "instanceOf": "bahmni.template.registration",
   "description": "Bahmni Patient Registration App",
   "extensionPoints": [
      {
         "id": "org.bahmni.registration.patient.search.result.action",
         "description": "Bahmni Patient Search Result Action"
      },
      {
         "id": "org.bahmni.registration.patient.next",
         "description": "After Bahmni Patient Registration, forward url configuration"
      }
   ],
   "contextModel": [
      "patientUuid",
      "activeVisitUuid"
   ],

   "config": {
      "showStartVisitButton": true,
      "patientInformation": {
         "contactInformation": {
            "title": "Informations de contact",
            "translationKey": "REGISTRATION_CONTACT_INFORMATION",
            "attributes": [
               "Nom du contact",
               "Tel 1 du Contact",
               "Tel 2 du Contact"
            ]
         },
         "patientMedicalInformation": {
            "title": "Informations médicaux du patient",
            "translationKey": "REGISTRATION_PATIENT_MEDICAL_INFORMATION",
            "attributes": [
               "Date depistage",
               "Lieu de depistage",
               "ARV Naif/ Non Naif"
            ],
            "expanded": true
         },
         "patientDependentInformation":
                {
            "title" : "Informations Des Dependents",
            "translationKey" : "REGISTRATION_PATIENT_DEPENDENT_INFORMATION",
            "attributes" : [
               "Lien_Dep",
               "No CHK_Dep",
               "Prénom_Dep",
               "Nom_Dep",
               "Informé du statut VIH du patient_Dep",
               "Résultat_Dep",
               "Date de naissance_Dep(Age c'est plus simple)"
            ]
         },
         "patientConfidentInformation":
                {
            "title" : "Informations Des Confidents",
            "translationKey" : "REGISTRATION_PATIENT_CONFIDENT_INFORMATION",
            "attributes" : [
               "Prénom du Confident 1",
               "Nom du Confident 1",
               "Tel_Conf 1",
               "Lien 1",
               "Prénom du Confident 2",
               "Nom du Confident 2",
               "Tel_Conf 2",
               "Lien 2"
            ]
         }
      },
      "addressHierarchy": {
         "showAddressFieldsTopDown": false,
         "strictAutocompleteFromLevel": "address6"
      },
      "mandatoryPersonAttributes": [
         "ARV Naif/ Non Naif"
      ],
      "defaultVisitType": "OPD",
      "showMiddleName": true,
      "showLastName": true,
      "showBirthTime": false,
      "isLastNameMandatory": true,
      "showCasteSameAsLastNameCheckbox": false,
      "disablePhotoCapture": true,
      "printOptions": [
         {
            "translationKey": "REGISTRATION_PRINT_SUPPLEMENTAL_PAPER",
            "templateUrl": "/bahmni_config/openmrs/apps/registration/supplementalPaperLayout/print.html",
            "shortcutKey": "r"
         }
      ],
      "fieldValidation": {
         "Tel 1": {
            "pattern": "[0-9]{10}",
            "errorMessage": "Doit contenir 10 chiffres"
         },
         "Tel 2": {
            "pattern": "[0-9]{10}",
            "errorMessage": "Doit contenir 10 chiffres"
         },
         "Tel_Conf 1" : {
            "pattern" : "[0-9]{10}",
            "errorMessage" : "Doit contenir 10 chiffres"
         },
         "Tel_Conf 2" : {
            "pattern" : "[0-9]{10}",
            "errorMessage" : "Doit contenir 10 chiffres"
         },

